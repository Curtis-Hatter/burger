<h1>BURGERS!</h1>

<h2>Here's our Burgers!</h2>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h3>READY FOR EATING!</h3>
            <ul id="burgerList">
                {{#each Burgers}}
                {{#unless devoured}}

                <p>Burger {{id}}: {{burger_name}} <button name={{id}} type="submit">Devour
                        IT!</button></p>

                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h3>DEVOURED!</h3>
            <ul>
                {{#each Burgers}}
                {{#if devoured}}

                <p>Burger {{id}}: {{burger_name}}</p>

                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<h4>Add a Burger</h4>
<form id="burger">
    <label>Burger: <input type="text" name="burger_name"></label>
    <br><br>
    <button type="submit">Add a Burger!</button>
</form>